<Window x:Class="LvPlayer.UserControl.LoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LvPlayer"
         xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="LoadWindow"  WindowStyle="None" Background="Transparent" Height="200" Width="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            
            <!--<hc:LoadingCircle/>-->
                <Border VerticalAlignment="Center" Margin="10" Background="{DynamicResource PrimaryBrush}" CornerRadius="10">
                    <hc:LoadingCircle Style="{StaticResource LoadingCircleLight}" Margin="5"/>
                </Border>
            <TextBlock x:Name="txtTitle" Margin="3,20,3,3" HorizontalAlignment="Center" Text="加载中" Style="{StaticResource TextBlockLargeBold}" Foreground="{DynamicResource PrimaryBrush}"/>
            </StackPanel>
    </Grid>
</Window>
